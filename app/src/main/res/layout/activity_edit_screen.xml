<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditScreen">
    <Button
        android:layout_marginTop="20dp"
        android:layout_marginLeft="140dp"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"/>
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/imageView2"
        android:layout_height="400dp"
        android:src="@drawable/icon"
        android:layout_width="match_parent"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
            <ImageButton
                android:id="@+id/crop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:gravity="end"
                android:src="@drawable/ic_baseline_crop_24"/>




            <ImageButton
                android:id="@+id/rotateAntiClock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:gravity="end"
                android:src="@drawable/ic_baseline_rotate_left_24"/>



            <ImageButton
                android:id="@+id/rotateClock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:gravity="end"
                android:src="@drawable/ic_baseline_rotate_right_24"/>



            <ImageButton
                android:id="@+id/undo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:gravity="end"
                android:src="@drawable/ic_baseline_undo_24" />


    </LinearLayout>
</LinearLayout>